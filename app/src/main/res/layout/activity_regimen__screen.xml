<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/backgroud_main"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"></include>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/nutrition_list"
        android:elevation="2dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:background="@drawable/rounded_corner_grid"
        android:scrollbars="none"
        android:layout_height="match_parent" >
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/email_reg"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:theme="@style/Button_style"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:textSize="@dimen/_18sp"
            android:text="@string/email_reg" />
        <View
            android:layout_width="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/cardview_color"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_height="wrap_content"></View>
        <TextView
            android:id="@+id/recom_prod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_18sp"
            android:theme="@style/Button_style"
            android:gravity="center"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:text="@string/rec_prd"/>
    </LinearLayout>


</LinearLayout>
