<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reg_cardview"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    android:elevation="2dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
       android:padding="@dimen/_5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llchild"
            android:padding="@dimen/regimen_ll_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Com.knoventive.nutri.Util.CustomTextView_Air_Semibold
            android:id="@+id/desc"
            style="@style/textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/black"
            android:textStyle="bold" />
            <Com.knoventive.nutri.Util.CustomTextView
                android:id="@+id/tappable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_16sp"
                android:textColor="@color/colorAccent" />

        <Com.knoventive.nutri.Util.CustomTextView
            android:id="@+id/nutrition_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sp"
            android:gravity="end"
            android:layout_weight="1"
            android:textColor="@color/colorAccent" />

        <Com.knoventive.nutri.Util.CustomTextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="@dimen/_16sp"
            android:layout_marginLeft="@dimen/_5dp"
            android:textColor="@color/orange" />
        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.CardView>
