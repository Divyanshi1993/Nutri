<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@android:color/white" />
                    <corners android:radius="@dimen/_0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>

            <!-- SHADOW LAYER -->
            <item  android:top="4dp">
                <shape>
                    <solid android:color="@color/drop_shadow" />
                    <corners android:radius="30dip"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="4dp">
                <shape>
                    <solid android:color="@android:color/white"/>
                    <corners android:radius="@dimen/_25dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/stroke_color"
                        android:dashGap="1dp">
                    </stroke>
                </shape>

            </item>
        </layer-list>
    </item>
</selector>